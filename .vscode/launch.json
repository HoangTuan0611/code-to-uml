    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/bin/index.js",
            "args": ["--glob","./src/demo/**/*.ts","-o", "./assets/uml_diagram.svg"],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMaps": true,
            "console": "integratedTerminal"
        }
    ]
}